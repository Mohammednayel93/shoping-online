@model MvcProject.ViewModel.User_VM

@{
    ViewBag.Title = "Register";
}

<h2 class="text-center">Register</h2>
<div class="section text-center">
    <div class="container">
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(n => n.Name, new { @class = "form-control", id = "inputEmail" })
                        @Html.ValidationMessageFor(n => n.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">

                        @Html.TextBoxFor(n => n.Email, new { @class = "form-control", id = "inputPassword" })
                        @Html.ValidationMessageFor(n => n.Email)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <input id="File1" class="form-control" name="ImagePath" type="file" />

                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">

                        @Html.PasswordFor(n => n.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Password)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-10">

                        @Html.PasswordFor(n => n.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.ConfirmPassword)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Gender</label>
                    <div class="col-sm-10">

                        @Html.TextBoxFor(n => n.Gender, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Gender)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">

                        @Html.TextBoxFor(n => n.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Address)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" class="btn btn-primary" />

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")
