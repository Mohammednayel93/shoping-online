<ul class="header-cart-wrapitem w-full">
    @if (Session["CurrentUser"] != null && Session["cart"] != null)
    {


        foreach (var item in Session["cart"] as List<MvcProject.Models.ItemCart>)
        {
            <li class="header-cart-item flex-w flex-t m-b-12">
                <div class="header-cart-item-img">
                    <img src="@Url.Content(item.Product.Image)" alt="IMG">
                </div>

                <div class="header-cart-item-txt p-t-8">
                    <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                        @item.Product.Name
                    </a>

                    <span class="header-cart-item-info">
                        @item.Quantity x $ @item.Product.Price
                    </span>
                </div>
            </li>
        }


    }
</ul>
@if (Session["CurrentUser"] != null && Session["cart"] != null)
{
    <div class="w-full">
        <div class="header-cart-total w-full p-tb-40">

            @{
                List<MvcProject.Models.ItemCart> cart = (List<MvcProject.Models.ItemCart>)Session["cart"];
                var total = cart.Sum(item => item.Product.Price * item.Quantity);
            }

            Total: $ @total

        </div>



        <div class="header-cart-buttons flex-w w-full">
            <a href="@Url.Content("/Home/Cart")" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                View Cart
            </a>


        </div>

    </div>
}
