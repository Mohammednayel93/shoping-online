
@model MvcProject.Models.Product
@{
    ViewBag.TitlePage = "Add Product";
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalCenterTitle">@ViewBag.TitlePage</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" enctype="multipart/form-data" action="/Admin/AddProduct">

    <div class="modal-body">

        <div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Name</label>

            @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Name)

        </div>
        <div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Description</label>

            @Html.TextBoxFor(n => n.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Description)

        </div>

        <div class="md-form  ">

            <label for="inputPassword" class="col-sm-2 col-form-label">Image</label>
            <br />
            <div>
                <input id="File1" class="form-control" name="ImagePath" type="file" />

            </div>

        </div><div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Price</label>
            @Html.TextBoxFor(n => n.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Price)
        </div><div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Category</label>


            @Html.DropDownListFor(n => n.Category_Id, ViewBag.category as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Category_Id)
        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

        <input id="Submit1" class="btn btn-default" type="submit" value="submit" />
    </div>
</form>

@Scripts.Render("~/bundles/jqueryval")


