@model List<MvcProject.Models.Product>
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5 text-center">
                Product
            </h3>
        </div>
        <div class="row isotope-grid" id="Content">
            @foreach (var item in Model)
            {


                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="@Url.Content(item.Image)" style="height: 297px !important;" alt="IMG-PRODUCT">

                            @*<a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                    Quick View
                                </a>*@
                            <a>
                                @Ajax.ActionLink("Add To Cart", "AddToCart", "Home", new { id = item.Id },
                               new AjaxOptions {
                                   OnComplete="Function",OnBegin="Check"
                                    }, new { @class = "block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1" })
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @item.Name
                                </a>

                                <span class="stext-105 cl3">
                                    $@item.Price
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="../../images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="../../images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@{

    if ((Session["CurrentUser"]) != null)
    {


        var x = (Session["CurrentUser"]) as MvcProject.Models.User;
        <input type="hidden" id="session" value="@x.Name.ToString()" />

    }
    else
    {


        <input type="hidden" id="session" value="" />
    }
}
@section scripts{
    <script>
        function Function() {
            var session = $('#session').val();
            if (session != '') {
                toastr.success('Product Added To Cart Successfully', 'Done');

                $.ajax({
                    url: '/Home/CartMenu',
                    method: 'GET'
                }).done(function (data) {
                    $('#CartMenu').html(data);
                });
                $.ajax({
                    type: "POST",
                    url: '/Home/notification',
                    data: "",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $("#noti").attr("data-notify", data.count)
                    },
                    error: function (e) {
                        //$("#divResult").html("Something Wrong.");
                    }
                });
            }
        }
        function Check() {
            var session = $('#session').val();
            if (session == '') {
                openLoginModal();
                toastr.error('Login First', 'Opps');
            }
        }

    </script>
}