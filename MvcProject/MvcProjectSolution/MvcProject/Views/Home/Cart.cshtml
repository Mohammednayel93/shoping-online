@model List<MvcProject.Models.ItemCart>
@{
    ViewBag.Title = "Cart";
}
<div id="cartrefreach">
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2"></th>
                                    <th class="column-3">Price</th>
                                    <th class="column-4">Quantity</th>
                                    <th class="column-5">Total</th>
                                    <th class="column-5">Option</th>
                                </tr>
                                @if (Session["CurrentUser"] != null && Session["cart"] != null)
                                {


                                    foreach (var item in Model)
                                    {
                                        <tr class="table_row">
                                            <td class="column-1">
                                                <div class="how-itemcart1">
                                                    <img src="@Url.Content(item.Product.Image)" alt="IMG">
                                                </div>
                                            </td>
                                            <td class="column-2">@item.Product.Name</td>
                                            <td class="column-3">$ @item.Product.Price</td>
                                            <td class="column-4">
                                                <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                    @*<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                                        </div>*@

                                                    <input class="mtext-104 cl3   num-product" style="    padding-left: 25px;" type="number" name="num-product1" value="@item.Quantity">

                                                    @*<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                                        </div>*@
                                                </div>
                                            </td>
                                            <td class="column-5">$@(item.Product.Price * item.Quantity) </td>
                                            <td>
                                                @Html.ActionLink("Delete", "Remove", "Home", new { id = item.Product.Id }

                             , new { @class = "btn btn-danger" })
                                            </td>
                                        </tr>
                                    }
                                    List<MvcProject.Models.ItemCart> cart = (List<MvcProject.Models.ItemCart>)Session["cart"];
                                    if (cart.Count != 0)
                                    {
                                        <tr class="table_row">
                                            <td class="column-1" style="text-align: center;" align="right" colspan="4">
                                                Total Price
                                            </td>
                                            <td style="text-align: center;">
                                                @{

                                                    var total = cart.Sum(item => item.Product.Price * item.Quantity);
                                                }
                                                @total
                                            </td>

                                        </tr>
                                    }
                                }
                            </table>
                        </div>

                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                            <div class="flex-w flex-m m-r-20 m-tb-5">
                                @if (Session["CurrentUser"] != null && Session["cart"] != null)
                                {
                                    List<MvcProject.Models.ItemCart> cart = (List<MvcProject.Models.ItemCart>)Session["cart"];
                                    if (cart.Count != 0)
                                    {
                                        <div style="    margin-left: 212px;" class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                            @Html.ActionLink("Apply", "ApplyCart", "Home")


                                        </div>
                                    }
                                }
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
