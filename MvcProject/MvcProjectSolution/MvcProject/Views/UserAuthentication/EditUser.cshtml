@model MvcProject.ViewModel.User_VM

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalCenterTitle">@ViewBag.TitlePage</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" enctype="multipart/form-data" action="/UserAuthentication/EditUser">
    <input type="hidden" value="@TempData["LoginError"]" />
    <div class="modal-body">

        <div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Name</label>

            @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Name)

        </div>
        <div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Email</label>

            @Html.TextBoxFor(n => n.Email, new { @class = "form-control", id = "inputPassword" })
            @Html.ValidationMessageFor(n => n.Email)

        </div>

        <div class="md-form  ">

            <label for="inputPassword" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input id="File1" class="form-control" name="ImagePath" type="file" />

            </div>

        </div><div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Gender</label>
            @Html.TextBoxFor(n => n.Gender, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Gender)
        </div><div class="md-form  ">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Address</label>


            @Html.TextBoxFor(n => n.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Address)
        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

        <input id="Submit1" class="btn btn-default" type="submit" value="submit" />
    </div>
</form>

@Scripts.Render("~/bundles/jqueryval")

